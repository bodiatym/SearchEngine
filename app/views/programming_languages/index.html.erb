<%= button_to 'Prepare Data', programming_languages_prepare_data_path , class: 'data-button' %>
<div class="list-container">
  <h2>Programming languages</h2>
  <div class="search-wrapper">
    <div class="search">
      <%= form_tag(root_path, method: :get) do %>
        <%= text_field_tag(:search, params[:search]) %>
        <%= button_tag( :class => "search-btn") do %>
          <i class="fas fa-search"></i>
        <% end %>
      <% end %>
    </div>
  </div>
  <ul class="list">
    <% if @languages_hash.empty?  %>
      <li>
        <span class="circle"></span>
        <h5> No Results Found</h5>
      </li>
    <% else  %>
      <% @languages_hash.each do |lang|%>
      <li>
        <span class="circle"></span>
        <h5> <%= lang['Name'] %> </h5> <%= lang['Type'] %> Designed by:<%= lang['Designed by']%>
      </li>
      <% end %>
    <% end %>
  </ul>
</div>
